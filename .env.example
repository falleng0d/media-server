# Media Server Environment Variables
# Copy this file to .env and adjust the values for your setup

# Base paths
MEDIA_DRIVE=/path/to/your/media/drive
CONFIG_DIR=/docker

# User and permissions
PUID=1000
PGID=1000
UMASK=002
TZ=UTC

# Homarr
SECRET_ENCRYPTION_KEY=your-secret-key-here

# Flaresolverr
LOG_LEVEL=info
LOG_HTML=false
CAPTCHA_SOLVER=none

# Cloudflare DDNS
DOMAINS=your-domain.com,www.your-domain.com
PROXIED=false,true
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
DDNS_UPDATE_CRON=@every 5m
